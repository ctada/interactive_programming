"""
Testing different word cloud methods
"""



from pytagcloud import create_tag_image, create_html_data, make_tags, LAYOUT_HORIZONTAL, LAYOUTS, LAYOUT_MIX, LAYOUT_VERTICAL, LAYOUT_MOST_HORIZONTAL, LAYOUT_MOST_VERTICAL
from pytagcloud.lang.counter import get_tag_counts
from pytagcloud.colors import COLOR_SCHEMES
import webbrowser


sonnets_full_text = open('ShakespeareanSonnets.txt').read()
begin_index = sonnets_full_text.find('III')
end_index = sonnets_full_text.find('IV')
sonnets_text = sonnets_full_text[begin_index+1:end_index]

YOUR_TEXT = sonnets_text

tags = make_tags(get_tag_counts(YOUR_TEXT), maxsize = 120)
# create_tag_image(tags, 'cloud_large.png', size = (900,600), fontname ='Philosopher', layout = LAYOUT_MIX, rectangular = True)
# webbrowser.open('cloud_large.png')
data = create_html_data(tags, (1600, 1200), layout = LAYOUT_MIX, fontname = 'Philosopher', rectangular = True)
print type(data)
webbrowser.open(data)